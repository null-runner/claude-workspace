{
  "rotation_policies": {
    "daily_logs": {
      "max_size_mb": 10,
      "keep_files": 7,
      "compress_after_days": 1,
      "patterns": [
        "*.log",
        "*-output.log",
        "*-error.log"
      ]
    },
    "system_logs": {
      "max_size_mb": 50,
      "keep_files": 30,
      "compress_after_days": 3,
      "patterns": [
        "autonomous-system.log",
        "coordinator.log",
        "smart-sync*.log"
      ]
    },
    "debug_logs": {
      "max_size_mb": 5,
      "keep_files": 3,
      "compress_after_days": 0,
      "patterns": [
        "*debug*.log",
        "*trace*.log",
        "*test*.log"
      ]
    }
  },
  "compression": {
    "enabled": true,
    "method": "gzip",
    "level": 6,
    "delete_original": true
  },
  "archive": {
    "enabled": true,
    "max_archive_size_mb": 100,
    "cleanup_older_than_days": 90
  },
  "safety": {
    "min_free_space_mb": 50,
    "verify_before_delete": true,
    "backup_before_rotation": false
  }
}
