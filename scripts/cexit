#!/bin/bash
# Claude Exit - Graceful exit con smart-sync automatico
# Usa questo comando invece di 'exit' per avere graceful exit automatico

WORKSPACE_DIR="$HOME/claude-workspace"

# Colori
CYAN='\033[0;36m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m'

echo -e "${CYAN}ðŸª Claude Exit - avvio graceful exit...${NC}"
echo ""

# Cambia alla directory workspace se non ci siamo giÃ 
if [[ "$(pwd)" != "$WORKSPACE_DIR" ]]; then
    cd "$WORKSPACE_DIR" 2>/dev/null || {
        echo -e "${RED}âŒ Errore: impossibile accedere a $WORKSPACE_DIR${NC}"
        echo -e "${YELLOW}ðŸ’¡ Proseguo con exit normale...${NC}"
        exit "$@"
    }
fi

# Controlla se lo script smart-exit esiste
if [[ ! -f "$WORKSPACE_DIR/scripts/claude-smart-exit.sh" ]]; then
    echo -e "${RED}âŒ Smart-exit script non trovato${NC}"
    echo -e "${YELLOW}ðŸ’¡ Proseguo con exit normale...${NC}"
    exit "$@"
fi

# Esegui smart exit con modalitÃ  automatica
echo -e "${BLUE}ðŸš€ Executing smart exit...${NC}"
"$WORKSPACE_DIR/scripts/claude-smart-exit.sh" --auto

# Se arriviamo qui, smart-exit ha completato con successo
echo -e "${GREEN}âœ… Graceful exit completato - terminando sessione Claude Code...${NC}"
echo ""

# Strategia 1: Prova a terminare il processo parent Claude Code
CLAUDE_PID=$(ps -o pid,cmd -e | grep -E "claude$|claude-code$" | grep -v grep | awk '{print $1}' | head -1)
if [[ -n "$CLAUDE_PID" ]]; then
    echo -e "${BLUE}ðŸŽ¯ Terminando Claude Code (PID: $CLAUDE_PID)...${NC}"
    kill -TERM "$CLAUDE_PID" 2>/dev/null || {
        echo -e "${YELLOW}ðŸ’€ Tentativo kill gentile fallito, uso kill -9...${NC}"
        kill -9 "$CLAUDE_PID" 2>/dev/null
    }
    sleep 1
fi

# Strategia 2: Se siamo ancora qui, termina questa shell
echo -e "${BLUE}ðŸ”„ Terminando shell corrente...${NC}"
kill -TERM $$ 2>/dev/null || exit "$@"
