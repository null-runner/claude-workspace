#!/bin/bash
# Claude Exit - Graceful exit con smart-sync automatico
# Usa questo comando invece di 'exit' per avere graceful exit automatico

WORKSPACE_DIR="$HOME/claude-workspace"

# Colori
CYAN='\033[0;36m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m'

echo -e "${CYAN}ğŸª Claude Exit - avvio graceful exit...${NC}"
echo ""

# Cambia alla directory workspace se non ci siamo giÃ 
if [[ "$(pwd)" != "$WORKSPACE_DIR" ]]; then
    cd "$WORKSPACE_DIR" 2>/dev/null || {
        echo -e "${RED}âŒ Errore: impossibile accedere a $WORKSPACE_DIR${NC}"
        echo -e "${YELLOW}ğŸ’¡ Proseguo con exit normale...${NC}"
        exit "$@"
    }
fi

# Controlla se lo script smart-exit esiste
if [[ ! -f "$WORKSPACE_DIR/scripts/claude-smart-exit.sh" ]]; then
    echo -e "${RED}âŒ Smart-exit script non trovato${NC}"
    echo -e "${YELLOW}ğŸ’¡ Proseguo con exit normale...${NC}"
    exit "$@"
fi

# Esegui smart exit con modalitÃ  automatica
echo -e "${BLUE}ğŸš€ Executing smart exit...${NC}"
"$WORKSPACE_DIR/scripts/claude-smart-exit.sh" --auto

# Smart exit completato - ora richiedi conferma per terminazione
echo ""
echo -e "${GREEN}âœ… Graceful exit operations completed!${NC}"
echo ""

# Confirmation prompt per terminare Claude Code
read -p "ğŸšª Terminare Claude Code? [Y/n]: " -n 1 -r confirm
echo ""

if [[ "$confirm" =~ ^[Yy]$|^$ ]]; then
    echo -e "${CYAN}ğŸ‘‹ Terminating Claude Code...${NC}"
    echo ""
    
    # Trova il PID di Claude Code
    CLAUDE_PID=$(pgrep -f "claude-code" | head -1)
    
    if [[ -n "$CLAUDE_PID" ]]; then
        echo -e "${CYAN}ğŸ”¥ Found Claude Code PID: $CLAUDE_PID${NC}"
        
        # Verifica se Claude Ã¨ process group leader
        CLAUDE_PGID=$(ps -o pgid= -p "$CLAUDE_PID" 2>/dev/null | tr -d ' ')
        if [[ -n "$CLAUDE_PGID" && "$CLAUDE_PGID" == "$CLAUDE_PID" ]]; then
            echo -e "${CYAN}ğŸ”¥ Claude Ã¨ group leader - killing process group...${NC}"
            kill -TERM -"$CLAUDE_PID" 2>/dev/null
        else
            echo -e "${CYAN}ğŸ”¥ Killing Claude process...${NC}"
            kill -TERM "$CLAUDE_PID" 2>/dev/null
        fi
        
        # Wait per graceful termination
        sleep 2
        
        # Force kill se ancora in esecuzione
        if kill -0 "$CLAUDE_PID" 2>/dev/null; then
            echo -e "${YELLOW}âš¡ Force killing Claude...${NC}"
            kill -KILL "$CLAUDE_PID" 2>/dev/null
        fi
        
        echo -e "${GREEN}âœ… Claude Code terminated successfully!${NC}"
    else
        echo -e "${YELLOW}âš ï¸  Claude Code process not found${NC}"
        echo -e "${CYAN}ğŸ’¡ Exiting gracefully...${NC}"
    fi
    
    exit 0
else
    echo -e "${CYAN}ğŸ’¡ Sessione mantenuta aperta${NC}"
    echo -e "${YELLOW}ğŸ’¡ Usa 'exit' normale se vuoi chiudere senza graceful operations${NC}"
    exit 0
fi
