#!/bin/bash
# Claude Exit Safe - Graceful exit con terminazione sicura
# Versione piÃ¹ sicura che non forza kill del processo

WORKSPACE_DIR="$HOME/claude-workspace"

# Colori
CYAN='\033[0;36m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m'

echo -e "${CYAN}ðŸª Claude Exit Safe - avvio graceful exit...${NC}"
echo ""

# Cambia alla directory workspace se non ci siamo giÃ 
if [[ "$(pwd)" != "$WORKSPACE_DIR" ]]; then
    cd "$WORKSPACE_DIR" 2>/dev/null || {
        echo -e "${RED}âŒ Errore: impossibile accedere a $WORKSPACE_DIR${NC}"
        echo -e "${YELLOW}ðŸ’¡ Proseguo con exit normale...${NC}"
        exit "$@"
    }
fi

# Controlla se lo script smart-exit esiste
if [[ ! -f "$WORKSPACE_DIR/scripts/claude-smart-exit.sh" ]]; then
    echo -e "${RED}âŒ Smart-exit script non trovato${NC}"
    echo -e "${YELLOW}ðŸ’¡ Proseguo con exit normale...${NC}"
    exit "$@"
fi

# Esegui smart exit con modalitÃ  automatica
echo -e "${BLUE}ðŸš€ Executing smart exit...${NC}"
"$WORKSPACE_DIR/scripts/claude-smart-exit.sh" --auto

# Graceful exit completato
echo -e "${GREEN}âœ… Graceful exit completato!${NC}"

# CLEANUP: Termina smart-sync daemon se attivo (anche con cexit-safe)
echo -e "${CYAN}ðŸ§¹ Cleaning up smart-sync daemon...${NC}"
SYNC_PID_FILE="$WORKSPACE_DIR/.claude/sync/smart-sync.pid"
if [[ -f "$SYNC_PID_FILE" ]]; then
    SYNC_PID=$(cat "$SYNC_PID_FILE")
    if [[ -n "$SYNC_PID" ]] && kill -0 "$SYNC_PID" 2>/dev/null; then
        echo -e "${CYAN}ðŸ›‘ Stopping smart-sync daemon (PID: $SYNC_PID)...${NC}"
        kill -TERM "$SYNC_PID" 2>/dev/null
        sleep 1
        if kill -0 "$SYNC_PID" 2>/dev/null; then
            kill -KILL "$SYNC_PID" 2>/dev/null
        fi
        echo -e "${GREEN}âœ… Smart-sync daemon stopped${NC}"
    fi
    rm -f "$SYNC_PID_FILE"
fi

echo -e "${BLUE}ðŸ’¡ Ora puoi chiudere manualmente Claude Code o usare Ctrl+C${NC}"
echo -e "${YELLOW}ðŸŽ¯ Per exit forzato, usa: ./scripts/cexit${NC}"
echo ""
echo -e "${CYAN}ðŸ“‹ SUMMARY:${NC}"
echo -e "   ðŸ’¾ Session salvata"
echo -e "   ðŸ”„ Smart-sync eseguito"
echo -e "   ðŸ“¤ Repository aggiornato"
echo -e "   ðŸ§¹ Daemon cleanup eseguito"
echo -e "   âœ… Workspace pulito e pronto"
echo ""

# Non esce - lascia che l'utente gestisca manualmente